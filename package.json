{
	"name": "clash-armies",
	"version": "0.5.5",
	"private": true,
	"type": "module",
	"scripts": {
		"start:before": "docker compose up -d",
		"start": "npm run start:before && vite dev",
		"start:network": "npm run start:before && vite dev --host",
		"start:https": "DEV_HTTPS=1 npm run start:network",
		"production": "vite preview",
		"build": "vite build",
		"test:before": "docker compose --env-file=.env.test --file=compose.test.yaml down -v && docker compose --env-file=.env.test --file=compose.test.yaml up -d",
		"test:coverage": "npm run test:before && vitest run --coverage",
		"test:ui": "npm run test:before && vitest --ui --coverage.enabled=true",
		"test": "npm run test:before && vitest run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json src"
	},
	"engines": {
		"node": ">=23.3.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.21.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@types/chai": "^5.0.1",
		"@types/chai-subset": "^1.3.5",
		"@types/eslint": "9.6.1",
		"@types/cookie-signature": "1.1.2",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.18.2",
		"@vitest/coverage-v8": "^3.1.1",
		"@vitest/ui": "^3.1.1",
		"chai": "^5.1.2",
		"chai-subset": "^1.6.0",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"@vitejs/plugin-basic-ssl": "2.0.0",
		"semver": "^7.7.1",
		"svelte": "^5.33.18",
		"svelte-check": "^4.2.1",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"vite": "^6.0.6",
		"vitest": "^3.1.1"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.10",
		"@ninjalib/sql": "^0.5.1",
		"@ninjalib/util": "0.5.4",
		"@tiptap/core": "^2.6.4",
		"@tiptap/extension-character-count": "^2.6.4",
		"@tiptap/extension-link": "^2.6.4",
		"@tiptap/extension-list-keymap": "^2.6.4",
		"@tiptap/extension-placeholder": "^2.6.4",
		"@tiptap/extension-text-align": "^2.6.4",
		"@tiptap/html": "^2.6.6",
		"@tiptap/pm": "^2.6.4",
		"@tiptap/starter-kit": "^2.6.4",
		"arctic": "1.5.0",
		"cron": "3.1.7",
		"date-fns": "3.6.0",
		"lucia": "3.1.1",
		"uuid": "^11.1.0",
		"cookie-signature": "1.2.2",
		"zod": "3.22.3"
	}
}
